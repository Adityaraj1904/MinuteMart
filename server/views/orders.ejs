<%- include('partials/header', { title: 'My Orders' }) %>

<main class="container mt-5">
  <h1 class="page-title">My Orders</h1>

  <div class="row">
    <div class="col-md-4">
        <div class="list-group">
          <a href="/profile" class="list-group-item list-group-item-action">
            <i class="bi bi-person-fill me-2"></i> My Account
          </a>
          <a href="/orders" class="list-group-item list-group-item-action active" aria-current="true">
            <i class="bi bi-box-seam me-2"></i> Orders
          </a>
          <a href="#" class="list-group-item list-group-item-action disabled">
            <i class="bi bi-geo-alt me-2"></i> Addresses (Coming Soon)
          </a>
          <a href="#" class="list-group-item list-group-item-action disabled">
            <i class="bi bi-headset me-2"></i> Customer Support (Coming Soon)
          </a>
          <a href="/logout" class="list-group-item list-group-item-action text-danger">
            <i class="bi bi-box-arrow-right me-2"></i> Logout
          </a>
        </div>
    </div>

    <div class="col-md-8">
        <% if (orders.length === 0) { %>
            <div class="card">
                <div class="card-body empty-state-card">
                    <div class="icon"><i class="bi bi-box-seam"></i></div>
                    <p>You haven't placed any orders yet.</p>
                    <a href="/shop" class="btn btn-primary">Start Shopping</a>
                </div>
            </div>
        <% } else { %>
            <% orders.forEach(order => { %>
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div>
                          <!-- <strong>Order Date:</strong> <%= new Date(order.createdAt).toLocaleDateString() %> -->
                            <strong>Order Date:</strong> <%= new Date(order.createdAt).toLocaleDateString('en-IN', { timeZone: 'Asia/Kolkata' }) %>
                        </div>
                        <div class="fw-bold">
                            Total: â‚¹<%= order.totalAmount.toFixed(2) %>
                        </div>
                    </div>
                    <ul class="list-group list-group-flush">
                        <% order.products.forEach(item => { %>
                            <% if (item.productId) { %>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>
                                        <%= item.productId.name %>
                                    </span>
                                    <span class="text-muted">
                                        Quantity: <%= item.quantity %>
                                    </span>
                                </li>
                            <% } %>
                        <% }) %>
                    </ul>
                </div>
            <% }) %>
        <% } %>
    </div>
  </div>
</main>

<!-- <%- include('partials/footer') %> -->

</body>
</html>